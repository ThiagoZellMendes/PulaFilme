{
  "compilerOptions": {
    "rootDirs": ["src", "tests"],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./",
    "allowJs": true,
    "noEmit": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["./tests/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests"],
  "buildOptions": {},
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "*/node_modules/*",
    "**/node_modules/**/*",
    "*/**/node_modules/**/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
